<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="round_button_normal">
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/button_state</item>
    <item name="android:textColor">@color/text_normal</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="digit_display_area">
    <item name="android:layout_marginStart">@dimen/text_area_horizontal_margin</item>
    <item name="android:layout_marginEnd">@dimen/text_area_horizontal_margin</item>
    <item name="android:layout_marginTop">@dimen/text_area_vertical_margin</item>
    <item name="android:layout_marginBottom">@dimen/text_area_vertical_margin</item>
    <item name="android:paddingStart">@dimen/text_area_horizontal_padding</item>
    <item name="android:paddingEnd">@dimen/text_area_horizontal_padding</item>
    <item name="android:paddingTop">@dimen/text_area_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/text_area_vertical_padding</item>
    <item name="android:gravity">end|center_vertical</item>
    <item name="android:background">@drawable/round_frame_display</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/text_normal</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollbars">none</item>
    <item name="android:scrollHorizontally">false</item>
    <item name="android:inputType">numberDecimal</item>
    <item name="android:editable">true</item>
  </style>
  <style name="title_display_area">
    <item name="android:layout_marginStart">@dimen/text_area_horizontal_margin</item>
    <item name="android:layout_marginEnd">@dimen/text_area_horizontal_margin</item>
    <item name="android:layout_marginTop">@dimen/text_area_vertical_margin</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_normal</item>
    <item name="android:maxLines">1</item>
  </style>
</resources>
